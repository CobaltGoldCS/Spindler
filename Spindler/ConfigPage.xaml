<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Spindler.Models"
             x:Class="Spindler.ConfigPage"
             Title="ConfigPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem StyleClass="Plus" Order="Primary" Priority="0" 
                     x:Name="addToolbarItem"
                 Clicked="addToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="list"
              Margin="5, 0"
              SelectionChanged="list_SelectionChanged"
                    SelectionMode="Single">
        <CollectionView.BindingContext>
            <models:Config/>
        </CollectionView.BindingContext>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <ContentView Margin="0,5,0,5" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label  HorizontalTextAlignment="Center" VerticalTextAlignment="Center" 
                                    FontSize="Large" x:Name="DomainNameLabel" Text="{Binding DomainName}"/>
                    </Grid>
                </ContentView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
