<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Spindler.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Spindler"
    xmlns:views="clr-namespace:Spindler.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Books">
            <ShellContent
                Title="Book Lists"
                ContentTemplate="{DataTemplate local:BookListPage}"
                Route="BookLists" />
        </Tab>
        <Tab Title="Configs">
            <ShellContent
                Title="Website Configs"
                ContentTemplate="{DataTemplate local:ConfigPage}"
                Route="Config" />
            <ShellContent
                Title="General Configs"
                ContentTemplate="{DataTemplate views:GeneralizedConfigPage}"
                Route="GeneralConfig" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate local:SettingsPage}"
                Route="Settings" />
        </Tab>
    </TabBar>

</Shell>
