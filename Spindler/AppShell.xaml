<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Spindler.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Spindler"
    xmlns:views="clr-namespace:Spindler.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Icon="book.svg">
            <ShellContent
                Title="Book Lists"
                ContentTemplate="{DataTemplate local:BookListPage}"
                Route="BookLists" />
        </Tab>
        <Tab Icon="gear.svg">
            <ShellContent
                Icon="gear.svg"
                Title="Website Configs"
                ContentTemplate="{DataTemplate local:ConfigPage}"
                Route="Config" />
            <ShellContent
                Icon="multiple_gears.svg"
                Title="General Configs"
                ContentTemplate="{DataTemplate views:GeneralizedConfigPage}"
                Route="GeneralConfig"/>
        </Tab>
       
        <Tab Icon="profile_gear.svg">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate local:SettingsPage}"
                Route="Settings" />
        </Tab>
    </TabBar>

</Shell>
