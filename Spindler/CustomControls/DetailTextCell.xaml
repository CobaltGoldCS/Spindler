<?xml version="1.0" encoding="utf-8" ?>
<ViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spindler.CustomControls.DetailTextCell"
             x:Name="_this">
    <Grid RowDefinitions="15, 25" Padding="10,0,0,0" HeightRequest="40" RowSpacing="5">
        <Label Grid.Row="0" TextColor="{StaticResource Primary}" Text="{Binding Source = {x:Reference _this}, Path = DetailText}"/>
        <Label Grid.Row="1" Text="{Binding Source = {x:Reference _this}, Path = Text}"/>
    </Grid>
</ViewCell>
