<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Spindler.ViewModels"
             xmlns:models="clr-namespace:Spindler.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodels:BookViewModel"
             x:Class="Spindler.BookPage">

    <ContentPage.Resources>
        <toolkit:BoolToObjectConverter x:Key="ExpanderIconConverter" FalseObject="∨" TrueObject="∧"/>
        <Style TargetType="Border">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <!-- Set Selected Item Appearance-->
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" >
                            <VisualState.Setters>
                                <Setter Property="StrokeThickness"
                                        Value="0"/>
                                <Setter Property="Stroke"
                                        Value="{StaticResource LightSpaceCadet}"/>
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="StrokeThickness"
                                        Value="2" />
                                <Setter Property="Stroke"
                                        Value="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource LightSpaceCadet}}"/>
                                <Setter Property="BackgroundColor"
                                        Value="Transparent"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Shell.TitleView>
        <Grid ColumnDefinitions="*, auto">

            <Label Text="{Binding Title}" Grid.Column="0" FontSize="Large" VerticalOptions="Center" HorizontalOptions="FillAndExpand" TextColor="{StaticResource Primary}"/>
            <StackLayout Grid.Column="1" HorizontalOptions="EndAndExpand" Orientation="Horizontal" VerticalOptions="Center" Margin="0,0,10,0">
                <ImageButton x:Name="AddToolBarItem"
                             HeightRequest="25"
                             WidthRequest="25"
                             Source="plus.svg"
                             Command="{Binding AddToolBarItemCommand}">
                    <ImageButton.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource Black}}"/>
                    </ImageButton.Behaviors>
                </ImageButton>
            </StackLayout>
        </Grid>
    </Shell.TitleView>
    <!---Pinned Books-->
    <Grid RowDefinitions="auto, *">
        <Border
            StrokeShape="RoundRectangle 10,10,10,10"
            StrokeThickness="0"
            Background="{StaticResource LightSpaceCadet}"
            Margin="5,0"
            IsVisible="{Binding PinnedBooksAreVisible}">
            <toolkit:Expander x:Name="PinView"
                              Padding="7,-1,8,5">
                <toolkit:Expander.Header>
                    <Grid ColumnDefinitions="20, *, 25" Padding="0,7,0,0" BackgroundColor="{StaticResource LightSpaceCadet}">
                        <Image Source="pin.svg" Margin="8,3,0,5">
                            <Image.Behaviors>
                                <toolkit:IconTintColorBehavior 
                                            TintColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource LightSpaceCadet}}"/>
                            </Image.Behaviors>
                        </Image>
                        <Label Text="Pinned Books" Grid.Column="1" Padding="10, -2, 0, 0" FontSize="Large" FontFamily="OpenSans (Semibold)" VerticalOptions="Center"/>
                        <Label Text="{Binding Source={x:Reference PinView}, Path=IsExpanded, Converter={StaticResource ExpanderIconConverter}}"
                           Grid.Column="2"
                           FontSize="Large"
                           Padding="2,-2,0,0"
                           VerticalOptions="Center"
                           FontFamily="OpenSans (Semibold)"/>
                    </Grid>
                </toolkit:Expander.Header>
                <CollectionView x:Name="PinnedBooksList"
                                ItemsSource="{Binding PinnedBooks}"
                                SelectedItem="{Binding CurrentPinnedBookSelection}"
                                SelectionChangedCommand="{Binding PinnedBookSelectionCommand}"
                                SelectionMode="Single"
                                ItemSizingStrategy="MeasureFirstItem"
                                BackgroundColor="{StaticResource LightSpaceCadet}"
                            >
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeShape="RoundRectangle 16,10,16,10">
                                <Grid
                                    x:DataType="models:Book"
                                    BackgroundColor="{AppThemeBinding Dark={StaticResource DarkCardBackground}, Light={StaticResource LightGray}}"
                                    ColumnDefinitions="200, 30"
                                    RowDefinitions="65, 30">
                                    <Label
                                       FontSize="Body"
                                       x:Name="TitleLabel"
                                       Text="{Binding Title}"
                                       MaxLines="4"
                                       Padding="15,10,15,0"/>
                                    <Image Grid.Row="1"
                                       Source="pin.svg"
                                       Aspect="AspectFit"
                                       Margin="10,5,0,10"
                                       HorizontalOptions="Start">
                                        <Image.Behaviors>
                                            <toolkit:IconTintColorBehavior 
                                            TintColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource LightSpaceCadet}}"/>
                                        </Image.Behaviors>
                                    </Image>
                                    <ImageButton Grid.Column="1"
                                             Grid.Row="1"
                                             Padding="0,0,0,5"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Source="kebab.svg"
                                             Aspect="AspectFit"
                                             x:Name="ConfigButton"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BookViewModel}}, Path=ConfigButtonCommand}"
                                             CommandParameter="{Binding}">
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior 
                                            TintColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource LightSpaceCadet}}"/>
                                        </ImageButton.Behaviors>
                                    </ImageButton>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </toolkit:Expander>
        </Border>

        <!--Standard book list-->
        <CollectionView x:Name="BooksList"
                        Grid.Row="1"
                        ItemsSource="{Binding BookList}"
                        SelectedItem="{Binding CurrentSelection}"
                        SelectionChangedCommand="{Binding SelectionCommand}"
                        RemainingItemsThreshold="3"
                        RemainingItemsThresholdReachedCommand="{Binding EndOfListReachedCommand}"
                        SelectionMode="Single"
                        ItemSizingStrategy="MeasureFirstItem"
                        VerticalScrollBarVisibility="Always"
                        Margin="5">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border StrokeShape="RoundRectangle 16,10,16,10">
                        <Grid
                          x:DataType="models:Book"
                          BackgroundColor="{AppThemeBinding Dark={StaticResource DarkCardBackground}, Light={StaticResource White}}"
                          ColumnDefinitions="*, 30"
                          RowDefinitions="50, 2, 40">
                            <Label 
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                FontSize="Medium"
                                x:Name="TitleLabel"
                                Text="{Binding Title}"
                                MaxLines="2"
                                Padding="10,0,5,0"/>
                            <Line BackgroundColor="{StaticResource LightSpaceCadet}"
                                  HorizontalOptions="Fill"
                                  Grid.Row="1"/>
                            <Label x:Name="UrlLabel"
                                   Text="{Binding Url}"
                                   MaxLines="2"
                                   FontSize="Small"
                                   Grid.Row="2"
                                   VerticalOptions="Fill"
                                   Padding="10,5,10,0"
                                   TextColor="LightGray" />
                            <ContentView Grid.Column="1"
                                         Grid.RowSpan="3"
                                         BackgroundColor="{StaticResource LightSpaceCadet}">
                                <ImageButton HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Grid.Column="1"
                                             Grid.Row="2"
                                             Source="kebab.svg"
                                            Padding="4"
                                             Aspect="AspectFit"
                                             x:Name="ConfigButton"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BookViewModel}}, Path=ConfigButtonCommand}"
                                             CommandParameter="{Binding}">
                                    <ImageButton.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Dark={StaticResource White}, Light={StaticResource LightSpaceCadet}}"/>
                                    </ImageButton.Behaviors>
                                </ImageButton>
                            </ContentView>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <ActivityIndicator IsRunning="True"/>
            </CollectionView.EmptyView>
            <CollectionView.Footer>
                <ActivityIndicator 
                    IsRunning="{Binding IsLoading}"
                    HeightRequest="{Binding LoaderHeightRequest}"
                    Color="{StaticResource Primary}"/>
            </CollectionView.Footer>
        </CollectionView>
    </Grid>
</ContentPage>
