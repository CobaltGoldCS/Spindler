<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spindler.Views.TableReplacements.TableInput"
             x:Name="_this"
             CompressedLayout.IsHeadless="True">
    <Grid RowDefinitions="*, auto"
          CompressedLayout.IsHeadless="True">
        <Label Margin="0,0,10,0"
               Text="{Binding Source={Reference _this}, Path=Label}"/>
        <Entry Grid.Row="1"
               Placeholder="{Binding Source={Reference _this}, Path=Label}"
               Text="{Binding Source={Reference _this}, Path=Text}"/>
    </Grid>
</ContentView>
