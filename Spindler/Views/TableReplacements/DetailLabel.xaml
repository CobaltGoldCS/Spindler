<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spindler.Views.TableReplacements.DetailLabel"
             x:Name="this"
             CompressedLayout.IsHeadless="True">
    <VerticalStackLayout CompressedLayout.IsHeadless="True" Margin="10,0,0,0">
        <Label Text="{Binding Source={x:Reference this}, Path=Title}"
               TextColor="{DynamicResource Primary}"
               FontSize="Small"/>

        <Label Text="{Binding Source={x:Reference this}, Path=Text}"
               TextColor="{DynamicResource TextColor}"
               FontSize="Default"/>
    </VerticalStackLayout>
</ContentView>
