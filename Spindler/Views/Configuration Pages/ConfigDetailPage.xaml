<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Spindler.Models"
             x:Class="Spindler.ConfigDetailPage"
             Title="ConfigDetailPage">
    <ContentPage.BindingContext>
        <models:Config/>
    </ContentPage.BindingContext>
    <Grid ColumnDefinitions="*, *, *" RowDefinitions="auto, auto, auto, auto, auto, *, auto" VerticalOptions="FillAndExpand">
        <StackLayout Orientation="Horizontal" Grid.ColumnSpan="3">
            <Label Text="Domain:" Padding="0,17,5,0" Margin="5,0,36,5"/>
            <Entry x:Name="domainEntry" HorizontalOptions="FillAndExpand" Margin="0,5,0,0"
                               Placeholder="Domain name of the website ex: google.com" Text="{Binding DomainName}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Row="1">
            <Label Text="Title Path:" Padding="0,17,5,0" Margin="5,0,28,5"/>
            <Entry x:Name="titleEntry" HorizontalOptions="FillAndExpand" Margin="0,5,0,0"
                               Placeholder="[Optional] Path pointing to the title element" Text="{Binding TitlePath}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Row="2">
            <Label Text="Content Path:" Padding="0,17,5,0" Margin="5,0,5,5"/>
            <Entry x:Name="contentEntry" HorizontalOptions="FillAndExpand" Margin="0,5,0,0"
                               Placeholder="Path pointing to the content of the page" Text="{Binding ContentPath}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Row="3">
            <Label Text="Previous Path:" Padding="0,17,5,0" Margin="5,0,0,0"/>
            <Entry x:Name="prevEntry" HorizontalOptions="FillAndExpand" Margin="0,5,0,0"
                               Placeholder="Path pointing to the previous url" Text="{Binding PrevUrlPath}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Row="4">
            <Label Text="Next Path:" Padding="0,17,5,0" Margin="5,0,23,5"/>
            <Entry x:Name="nextEntry" HorizontalOptions="FillAndExpand" Margin="0,5,0,0"
                               Placeholder="Path pointing to the next url" Text="{Binding NextUrlPath}"/>
        </StackLayout>
        <TableView Grid.Row="5" Grid.ColumnSpan="3" VerticalOptions="StartAndExpand">
            <TableRoot>
                <TableSection Title="Web View">
                    <SwitchCell x:Name="switchWebView" Text="Use Web View for Viewing this website" On="False" />
                </TableSection>
                <TableSection Title="Reader View">
                    <EntryCell x:Name="separatorEntry" Label="The Separator between p tags"/>
                    <SwitchCell x:Name="animationSwitch" Text="Animated Autoscroll" On="True"/>
                    <SwitchCell x:Name="cookieSwitch" Text="Automatically Obtain Cookies for this site" On="False" />
                </TableSection>
            </TableRoot>
        </TableView>

        <Button Text="Delete" Grid.Row="6" Grid.Column="0" Margin="5,0,5,0"
                    FontSize="Large"
                    Clicked="DeleteButton_Clicked" BackgroundColor="OrangeRed"/>
        <Button x:Name="Cancel" Grid.Row="6" Grid.Column="1" Margin="5,0,5,0"
                FontSize="Large"
                Text="Cancel" 
                Clicked="Cancel_Clicked"/>
        <Button x:Name="okButton" Grid.Row="6" Grid.Column="2" Margin="5,0,5,0"
                FontSize="Large"
                Clicked="okButton_Clicked"/>
    </Grid>
</ContentPage>
