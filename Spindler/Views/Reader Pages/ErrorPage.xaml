<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spindler.Views.ErrorPage"
             Title="An Error Has Occurred">
    <ScrollView Orientation="Vertical" IsEnabled="True">
        <VerticalStackLayout>
            <Label FontSize="Caption" Text="Error Message:" Margin="30,0,0,2"/>
            <Label x:Name="ErrorLabel" FontSize="Title" LineBreakMode="WordWrap"
            Text="ERROR HERE" Margin="30,0,0,0" />
            <Label Text="Is your configuration incorrect or missing?" Margin="30, 30, 30, 0" FontSize="Body" />
            <TableView>
                <TableRoot>
                    <TableSection Title="Having Multiple Problems? Use Compatability Mode">
                        <SwitchCell x:Name="HeadlessMode" OnChanged="HeadlessMode_OnChanged" Text="Open in headless (compatability) mode?"/>
                    </TableSection>
                </TableRoot>
            </TableView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>